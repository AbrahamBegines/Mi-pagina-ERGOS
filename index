    <script>
        let audio;

        function toggleImage() {
            const img = document.getElementById('warningImage');
            if (img.style.display === 'none' || img.style.display === '') {
                img.style.display = 'block';
                audio.play(); // Reproduce el audio
            } else {
                img.style.display = 'none';
            }
        }

        function initAudio() {
            audio = new Audio('https://www.example.com/tu-audio.mp3'); // Cambia esta ruta por la de tu audio
            audio.loop = true; // Hacer que el audio se repita
        }

        window.onload = initAudio; // Inicializa el audio al cargar la página
    </script>
